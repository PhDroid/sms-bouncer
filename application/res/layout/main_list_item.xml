<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/message_background"
  android:paddingBottom="5dp"
  android:paddingTop="5dp"
  android:paddingLeft="6dp"
  android:paddingRight="6dp">
    <TextView android:id="@+id/senderTextView"
    		  android:layout_height="wrap_content" 
    		  android:text="TextView" 
    		  android:layout_width="wrap_content" 
    		  android:layout_alignParentTop="true" 
    		  android:textColor="@color/sender_text"
    		  android:textSize="18sp">
    </TextView>
    <TextView android:id="@+id/receivedTimeTextView"
    		  android:layout_height="wrap_content" 
    		  android:text="TextView" 
    		  android:layout_width="wrap_content" 
    		  android:layout_alignParentRight="true" 
    		  android:layout_alignParentTop="true"
    		  android:textSize="12sp"
              android:textColor="@color/received_text">
    </TextView>
    <TextView android:id="@+id/messageTextView"
    		  android:layout_height="wrap_content"
    		  android:text="TextView" 
    		  android:layout_width="fill_parent"
    		  android:layout_alignParentTop="true"
    		  android:layout_marginTop="25dp"
              android:singleLine="true"
              android:textColor="@color/message_text"
    		  android:textSize="16sp">
    </TextView>
</RelativeLayout>
