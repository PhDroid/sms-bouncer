<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/list_item_background"
  android:paddingBottom="5dp"
  android:paddingTop="5dp"
  android:paddingLeft="6dp"
  android:paddingRight="6dp">
    <TextView android:id="@+id/senderTextView"
    		  android:layout_height="wrap_content" 
    		  android:text="TextView" 
    		  android:layout_width="wrap_content" 
    		  android:layout_alignParentTop="true" 
    		  android:textColor="@color/sender_text"
    		  android:textSize="18sp">
    </TextView>
    <TextView android:id="@+id/receivedTimeTextView"
    		  android:layout_height="wrap_content" 
    		  android:text="TextView" 
    		  android:layout_width="wrap_content" 
    		  android:layout_alignParentRight="true"
    		  android:layout_alignParentTop="true"
			  android:layout_marginRight="20dp"
    		  android:textSize="12sp"
              android:textColor="@color/received_text">
    </TextView>
    <TextView android:id="@+id/messageTextView"
    		  android:layout_height="wrap_content"
    		  android:text="TextView" 
    		  android:layout_width="fill_parent"
    		  android:layout_alignParentTop="true"
    		  android:layout_marginTop="25dp"
			  android:layout_marginRight="20dp"
              android:singleLine="true"
              android:textColor="@color/message_text"
    		  android:textSize="14sp">
    </TextView>
	<com.phdroid.smsb.widget.ReadableImageView android:id="@+id/arrow"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
			android:layout_marginRight="3dp"
			android:layout_marginTop="15dp"
			android:src="@drawable/list_arrow"
			>
	</com.phdroid.smsb.widget.ReadableImageView>
</RelativeLayout>
