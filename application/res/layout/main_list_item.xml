<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/main_list_message_background">
    <TextView android:id="@+id/senderTextView"
    		  android:layout_height="wrap_content" 
    		  android:text="TextView" 
    		  android:layout_width="wrap_content" 
    		  android:layout_alignParentTop="true" 
    		  android:layout_marginTop="3px"
    		  android:layout_marginLeft="3px"
              android:textColor="@color/sender_text"
    		  android:textSize="15px">
    </TextView>
    <TextView android:id="@+id/receivedTimeTextView"
    		  android:layout_height="wrap_content" 
    		  android:text="TextView" 
    		  android:layout_width="wrap_content" 
    		  android:layout_alignParentRight="true" 
    		  android:layout_alignParentTop="true"
    		  android:layout_marginTop="3px"
    		  android:layout_marginRight="3px">
    </TextView>
    <TextView android:id="@+id/messageTextView"
    		  android:layout_height="wrap_content"
    		  android:text="TextView" 
    		  android:layout_width="fill_parent"
    		  android:layout_alignParentTop="true"
    		  android:layout_marginTop="25px"
    		  android:layout_marginLeft="3px"
              android:singleLine="true"
              android:textColor="@color/message_text"
    		  android:textSize="16px">
    </TextView>
</RelativeLayout>
