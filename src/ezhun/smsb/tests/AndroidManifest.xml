<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="ezhun.smsb"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <application android:label="sms-bouncer" android:icon="@drawable/icon">
	    <uses-library android:name="android.test.runner" />
	    <activity android:name=".activity.BlockedSmsList"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
	    <activity android:name=".activity.BlockedSmsDetails"/>
	    <activity android:name=".activity.BlockedSendersList"/>
	    <receiver android:name=".broadcast.SmsReceiver">
	        <intent-filter>
		        <action android:name="android.provider.Telephony.SMS_RECEIVED" />
	        </intent-filter>
        </receiver>
	    <service android:name=".service.AnalysisService"/>
    </application>
	<uses-sdk android:minSdkVersion="11" />

	<instrumentation android:name="android.test.InstrumentationTestRunner"
	       android:targetPackage="ezhun.smsb.tests" android:label="Tests for My App" />
</manifest>
